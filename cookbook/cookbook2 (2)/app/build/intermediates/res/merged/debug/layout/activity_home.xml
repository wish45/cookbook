<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.cookbook.C_home"
    android:orientation="vertical">

    <!--////////////////////////////////////////////////////////////////////////////////////////-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--////////////////////////////////////////////////////////////////////////////////////-->


        <HorizontalScrollView
            android:id="@+id/Hsv_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fadeScrollbars="false"
            android:background="@drawable/ricesang"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/licear_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <!--<Button-->
                <!--android:id="@+id/button1"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:text="Button"-->
                <!--android:background="@drawable/circle_border" />-->
                <ImageButton
                    android:id="@+id/ib1"
                    android:layout_width="110dp"
                    android:layout_height="95dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ovalbutton"
                    android:scaleType="fitCenter"
                    android:src="@drawable/rlacl"/>

                <ImageButton
                    android:id="@+id/ib2"
                    android:layout_width="110dp"
                    android:layout_height="95dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ovalbutton"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ehlswkd" />

                <ImageButton
                    android:id="@+id/ib3"
                    android:layout_width="110dp"
                    android:layout_height="95dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ovalbutton"
                    android:scaleType="fitCenter"
                    android:src="@drawable/wpdbr" />

                <ImageButton
                    android:id="@+id/ib4"
                    android:layout_width="110dp"
                    android:layout_height="95dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ovalbutton"
                    android:scaleType="fitCenter"
                    android:src="@drawable/qneo" />

                <ImageButton
                    android:id="@+id/ib5"
                    android:layout_width="110dp"
                    android:layout_height="95dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ovalbutton"
                    android:scaleType="fitCenter"
                    android:src="@drawable/xhakxh" />


            </LinearLayout>

        </HorizontalScrollView>

        <!--////////////////////////////////////////////////////////////////////////////////////-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <ListView
                android:id="@+id/listview1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:dividerHeight="0px"
                android:divider="#ffffff"/>


        </LinearLayout>

        <!--////////////////////////////////////////////////////////////////////////////////////-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <ListView
                android:id="@+id/listview2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:dividerHeight="0px"
                android:divider="#ffffff"/>





        </LinearLayout>

        <!--////////////////////////////////////////////////////////////////////////////////////-->
    </LinearLayout>

    ////////////////////////////////////////////////////////////////////////////////////////
    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@drawable/ic_notice_24dp"
        fab:fab_colorNormal="@color/fabPrimary"
        fab:fab_colorPressed="@color/fabPressed"
        fab:fab_colorRipple="@color/fabRipple" />


</FrameLayout>

